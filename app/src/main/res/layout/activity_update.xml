<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/neww"
    android:padding="30dp">

    <EditText
        android:id="@+id/pid_input2"
        android:layout_width="335dp"
        android:layout_height="43dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/po"
        android:ems="10"
        android:hint="Patient ID"
        android:inputType="textPersonName"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/preid_input2"
        android:layout_width="335dp"
        android:layout_height="43dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/po"
        android:ems="10"
        android:hint="Prescription ID"
        android:inputType="textPersonName"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pid_input2" />

    <EditText
        android:id="@+id/doc_input2"
        android:layout_width="335dp"
        android:layout_height="43dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/po"
        android:ems="10"
        android:hint="Patient Name"
        android:inputType="textPersonName"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/preid_input2" />

    <EditText
        android:id="@+id/name_input2"
        android:layout_width="335dp"
        android:layout_height="43dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/po"
        android:ems="10"
        android:hint="Channel DOctor"
        android:inputType="textPersonName"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/doc_input2" />

    <EditText
        android:id="@+id/address_input2"
        android:layout_width="335dp"
        android:layout_height="43dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/po"
        android:ems="10"
        android:hint="Email"
        android:inputType="textPersonName"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name_input2" />

    <EditText
        android:id="@+id/contact_input2"
        android:layout_width="335dp"
        android:layout_height="43dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/po"
        android:ems="10"
        android:hint="Address"
        android:inputType="textPersonName"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/address_input2" />

    <EditText
        android:id="@+id/nic_input2"
        android:layout_width="335dp"
        android:layout_height="43dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/po"
        android:ems="10"
        android:hint="NIC"
        android:inputType="number"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contact_input2" />

    <Button
        android:id="@+id/update_button"
        android:layout_width="160dp"
        android:layout_height="43dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/df"
        android:hint="Update"
        android:textAllCaps="false"
        android:textColor="@color/cardview_light_background"
        android:textColorHint="#F4E7E7"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.91"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nic_input2" />

    <Button
        android:id="@+id/delete_button"
        android:layout_width="160dp"
        android:layout_height="43dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/df"
        android:hint="Delete"
        android:textAllCaps="false"
        android:textColor="@color/cardview_light_background"
        android:textColorHint="#F3F0F0"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nic_input2" />

</androidx.constraintlayout.widget.ConstraintLayout>